<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stas.sml.presentation.feature.map.MapsFragment">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.gms.maps.MapView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map"/>
    </FrameLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/myTool"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbar_height"
                android:background="@drawable/rectangle_14_edited"
                android:layout_gravity="end">

                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/homeBtnMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="8dp"
                    android:foregroundGravity="center_vertical"
                    android:src="@drawable/ic_home"
                    android:background="#ffffff"/>

                <android.support.v7.widget.SearchView
                    android:id="@+id/search_viewMaps"
                    app:queryHint="Search"
                    app:closeIcon="@drawable/ic_close"
                    app:searchIcon="@drawable/ic_search_black_24dp"
                    app:searchHintIcon="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:background="#00000000"
                    android:layout_alignParentEnd="true"
                    android:foregroundGravity="center_vertical"
                    android:src="@drawable/ic_search_black_24dp" />
            </android.support.v7.widget.Toolbar>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomsheet_height"
                android:clipToPadding="true"
                android:background="@drawable/bottomsheet_background"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/bottomsheet_boarder_padding">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/slide_sign"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/marker_in_bottomsheet_width"
                            android:layout_height="@dimen/marker_in_bottomsheet_height"
                            android:src="@drawable/marker"
                            android:layout_marginStart="@dimen/marker_in_bottomsheet_marginstart"/>

                        <TextView
                            android:id="@+id/addressField"
                            android:layout_marginStart="@dimen/address_marginstart"
                            android:layout_width="@dimen/address_width"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/address_text_size"
                            android:textAllCaps="true"/>

                        <TextView
                            android:paddingStart="@dimen/distance_paddingstart"
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/region_margintop"
                        android:id="@+id/regionField"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/region_text_size"/>

                    <ImageView
                        android:layout_width="@dimen/distance_sign_width"
                        android:layout_height="@dimen/distance_sign_height"
                        android:src="@drawable/distance"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/distance_sign_marginend"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>
            <Button
                android:background="@drawable/venuelistbtn_background"
                android:visibility="gone"
                android:id="@+id/toVenueListBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"/>

            <Button
                android:id="@+id/plusBtn"
                android:layout_gravity="top"
                android:layout_width="66dp"
                android:layout_height="67dp"
                android:background="@drawable/ic_zoom_plus"
                app:layout_anchor="@id/minusBtn"
                app:layout_anchorGravity="top|end"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/minusBtn"
                android:layout_gravity="top"
                android:layout_width="66dp"
                android:layout_height="67dp"
                android:background="@drawable/ic_zoom_minus"
                app:layout_anchor="@id/locationBtn"
                app:layout_anchorGravity="top|end"
                android:layout_marginEnd="15dp"/>

            <Button
                android:layout_gravity="top"
                android:id="@+id/locationBtn"
                android:layout_width="66dp"
                android:layout_height="67dp"
                android:background="@drawable/gps_arrow"
                app:layout_anchor="@id/bottom_sheet"
                app:layout_anchorGravity="top|end"
                android:layout_marginEnd="15dp"/>

            <android.support.v7.widget.RecyclerView
                android:background="#ffffff"
                android:visibility="invisible"
                android:id="@+id/categoryRecycler"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="54dp"/>

            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/placesRecycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="60dp"/>

            <android.support.v7.widget.RecyclerView
                android:visibility="invisible"
                android:layout_marginTop="133dp"
                android:id="@+id/suggestion_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"/>

        </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>
