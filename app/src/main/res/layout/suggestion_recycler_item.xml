<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/suggestion_card_background"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/placeLogo"
        android:layout_width="@dimen/placelogo_width"
        android:layout_height="@dimen/placelogo_height"
        android:layout_marginStart="@dimen/placelogo_marginstart"
        android:layout_marginTop="@dimen/placelogo_margintop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeName"
        android:layout_width="@dimen/placename_width"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="@dimen/placename_margintop"
        android:text="Мясо Love"
        android:textSize="@dimen/placename_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/placeRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/placerating_marginstart"
        android:layout_marginTop="56dp"
        android:numStars="5"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeShortDescription"
        android:layout_width="@dimen/placeshortdescription_width"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/placeshortdescription_margintop"
        android:text="Ресторан, где любят мясо"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="125dp"
        android:text="Ул. Красная, 134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/workIndicator"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="163dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/workstatus_marginstart"
        android:layout_marginTop="155dp"
        android:text="Открыто до 00:00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/short_distance_sign_width"
        android:layout_height="@dimen/short_distance_sign_height"
        android:layout_marginStart="@dimen/short_distance_sign_marginstart"
        android:layout_marginTop="130dp"
        android:src="@drawable/distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shortDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/short_distance_marginstart"
        android:layout_marginTop="134dp"
        android:text="3.1 км"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>