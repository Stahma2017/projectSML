<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.feature.map.PlacesActivity">






    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".presentation.feature.map.MapsActivity" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".presentation.feature.map.MapsActivity">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:background="@drawable/rectangle_14_edited"
            app:menu="@menu/toolbar_menu"
            android:layout_gravity="end"
            />



        <!--  <com.daimajia.slider.library.SliderLayout
              android:id="@+id/parallax"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />-->

        <ImageView
            android:id="@+id/parallax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            app:behavior_content_layout="@layout/custom_content"
            app:behavior_header_layout="@layout/custom_header"
            app:behavior_hideable="true"
            app:behavior_peekHeight="120dp"
            app:layout_behavior="com.example.stas.sml.customView.bottomSheet.GoogleMapsBottomSheetBehavior" />

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_bar">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomAppBar"
                android:layout_width="170dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                app:menu="@menu/bottomappbar_menu" />
        </FrameLayout>



    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>








